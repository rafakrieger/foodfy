{% extends "layout.njk" %}

{% block head %}
        <title>Receitas Foodfy</title>  
{% endblock %}

{% block bold %}
    <nav>
        <a href="/about" id="">Sobre</a>
        <a href="/recipes" id="bold">Receitas</a>
    </nav>
{% endblock %}

{% block content %}    
        <div class="container">
            <main class="grid-recipes">
                <section class="recipes">  

                {% for item in items %} 

                    <div class="card" id="{{ loop.index0 }}">
                        <img src="{{ item.image }}" alt="Image of {{ item.title }}">
                        <h4>{{ item.title }}</h4>
                        <p>por {{ item.author }}</p>
                    </div>

                {% endfor %}                    

                </section>
            </main>
        </div>
       
{% endblock %}