{% extends "layout.njk" %}

{% block head %}
        <title>Receitas Foodfy</title>  
{% endblock %}

{% block content %}    
        <div class="container">
            <main class="grid-recipes">
                <section class="recipes">  

                {% for item in items %} 

                    <div class="card" id="{{ loop.index }}">
                        <img src="{{ item.image }}" alt="Image of {{ item.title }}">
                        <h4>{{ item.title }}</h4>
                        <p>por {{ item.author }}</p>
                    </div>

                {% endfor %}                    

                </section>
            </main>
        </div>

    <div class="modal-overlay">
        <div class="modal">
            <div class="modal-img">
              <img src="" alt="receita">
            </div>         
              
            <div class="modal-content">
                <h4 class="recipe-title"></h4>
                <p class="recipe-author"></p>
            </div>

            <a class="close-modal">
                <p>Fechar</p>
            </a> 

          </div>
       </div>
       
{% endblock %}