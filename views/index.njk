{% extends "layout.njk" %}

{% block content %}
        <div class="container">
            <div class="open-box">    
                <div class="open-box-content">
                    <h1>As melhores receitas</h1>
                    <p class="briefing">Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>                
                </div>       
                
                    <img src="chef.png" alt="Chef">
                
            </div>

            <!-- <div class="grid-title">
                <h3>Mais acessadas</h3>
            </div> -->

            <section class="recipes">  

            {% for item in items %}
                      
                <div class="card" id="{{ loop.index0 }}">
                    <img src="{{ item.image }}" alt="Image of {{ item.title }}">
                    <h4>{{ item.title }}</h4>
                    <p>por {{ item.author }}</p>
                </div>                

            {% endfor %}

            </section>                
        </div>

{% endblock %}